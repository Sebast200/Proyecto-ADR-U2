{
  "id": null,
  "title": "Proyecto-ADR-U2 - Docker Monitor",
  "tags": ["docker", "prometheus", "adr-u2"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Contenedores en Ejecución",
      "targets": [
        {
          "expr": "engine_daemon_containers_running_total",
          "legendFormat": "Contenedores en ejecución"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4}
    },
    {
      "type": "stat",
      "title": "Versión del Docker Engine",
      "targets": [
        {
          "expr": "engine_daemon_engine_info{instance=\"host.docker.internal:9323\"}"
        }
      ],
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4}
    },
    {
      "type": "timeseries",
      "title": "Uso de CPU por Contenedor",
      "targets": [
        {
          "expr": "rate(engine_daemon_container_cpu_seconds_total[1m])",
          "legendFormat": "{{name}}"
        }
      ],
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Memoria usada por Contenedor (MB)",
      "targets": [
        {
          "expr": "engine_daemon_container_memory_usage_bytes/1024/1024",
          "legendFormat": "{{name}}"
        }
      ],
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Tráfico de Red por Contenedor (Bytes)",
      "targets": [
        {
          "expr": "rate(engine_daemon_container_network_io_bytes_total[1m])",
          "legendFormat": "{{name}}"
        }
      ],
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Reinicios de Contenedores",
      "targets": [
        {
          "expr": "rate(engine_daemon_container_restart_total[1m])",
          "legendFormat": "{{name}}"
        }
      ],
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8}
    },
    {
      "type": "table",
      "title": "Información General de Contenedores",
      "targets": [
        {
          "expr": "engine_daemon_containers_running_total"
        },
        {
          "expr": "engine_daemon_containers_paused_total"
        },
        {
          "expr": "engine_daemon_containers_stopped_total"
        }
      ],
      "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8}
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "container",
        "label": "Contenedor",
        "datasource": "Prometheus",
        "query": "label_values(engine_daemon_container_cpu_seconds_total, name)",
        "refresh": 1
      }
    ]
  }
}
