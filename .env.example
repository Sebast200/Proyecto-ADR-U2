# ==============================================
# TEMPLATE DE VARIABLES DE ENTORNO
# ==============================================
# Copia este archivo a .env y configura los valores reales
# NO commitear el archivo .env en git (debe estar en .gitignore)

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS PRINCIPAL
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# ==============================================
# CONFIGURACIÓN DE BACKENDS (Node.js)
# ==============================================
NODE_ENV=production

# Host de base de datos para backends
PGHOST=db
PGUSER=postgres
PGPASSWORD=change_this_password
PGDATABASE=postgres
PGPORT=5432

# ==============================================
# CONFIGURACIÓN DE BACKEND2 (Spring Boot/Java)
# ==============================================
SPRING_DATASOURCE_URL=change_this_url
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=change_this_password
SERVER_PORT=3001

# ==============================================
# CONFIGURACIÓN DE SINCRONIZACIÓN CON SUPABASE
# ==============================================
# URL de base de datos local (replica)
LOCAL_DB_URL=change_this_url

# Credenciales de Supabase (obtener del panel de Supabase)
SUPABASE_URL=change_this_url
SUPABASE_PORT=6543
SUPABASE_USER=postgres.xxxxxxxxxxxxx
SUPABASE_PASSWORD=your_supabase_password
SUPABASE_DB=postgres

# ==============================================
# CONFIGURACIÓN DE GRAFANA
# ==============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_this_password
GF_USERS_ALLOW_SIGN_UP=false

# ==============================================
# PUERTOS EXPUESTOS (Host:Container)
# ==============================================
# Frontend
FRONTEND_PORT=8081

# Backends Node.js
BACKEND1_PORT=3000
BACKEND1_REPLICA_PORT=3005

# Backend Java (Spring Boot)
BACKEND2_PORT=3001

# Adminer (DB Manager)
ADMINER_PORT=8080

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
NODE_EXPORTER_PORT=9100
DOCKER_STATS_EXPORTER_PORT=9487
